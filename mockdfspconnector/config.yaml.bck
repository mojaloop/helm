apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ template "mockdfspconnector.fullname" . }}
  labels:
      app: {{ template "mockdfspconnector.fullname" . }}
      chart: {{ .Chart.Name }}-{{ .Chart.Version | replace "+" "_" }}
      release: {{ .Release.Name }}
      heritage: {{ .Release.Service }}
data:
  mockConnector:
    host: {{ .Values.config.mockConnector.host}} 
    port: {{ .Values.config.mockConnector.port}}  
  centralLedger:
    host: {{ .Values.config.centralLedger.host}} 
    port: {{ .Values.config.centralLedger.port}}  
  connectorAccount: {{ .Values.config.connectorAccount}} 
